           },
           {
             "label": "Grayscale in",
             "value": "grayscale-in"
           },
           {
             "label": "Grayscale out",
             "value": "grayscale-out"
           },
           {
             "label": "Blur in",
             "value": "blur-in"
           },
           {
             "label": "Blur out",
             "value": "blur-out"
           }
        ]
     },
     {
        "type":"checkbox",
        "id":"use_mobile_redability",
        "label":"Improve mobile readability",
        "info": "Darkens images and uses white text on mobile devices"
    }
  ],
  "blocks":[
     {
        "type":"image",
        "name":"Image",
        "settings":[
           {
              "type":"image_picker",
              "id":"image",
              "label":"Image"
           },
           {
              "type":"text",
              "id":"cta_label",
